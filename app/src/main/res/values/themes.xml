<resources>
    <!-- Base application theme. -->
    <style name="Theme.Shaky" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#252525</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Theme of 'Cancel' button of the Battery optimization dialog. -->
    <style name="MyCancelTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">#BA5454</item>
    </style>

    <!-- Theme of the checkbox of the Battery optimization dialog. -->
    <style name="MyCheckboxTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorSecondary">#BA5454</item>
    </style>

    <!-- Theme of the Notes fragment. -->
    <style name="MyFragmentTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- end-of-scrolling halo color -->
        <item name="colorPrimary">@color/gray_scrolling</item>
        <!-- website link color -->
        <item name="colorSecondary">@color/teal_link</item>
    </style>
</resources>